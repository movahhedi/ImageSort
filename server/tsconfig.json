{
	"compilerOptions": {
		"noImplicitAny": false,
		"target": "es2020",
		"module": "ESNext",
		"outDir": "dist",
		"removeComments": false,
		"preserveConstEnums": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"allowImportingTsExtensions": false,
		"noEmit": false,
		"declaration": true,
		"strict": true,
		"baseUrl": "./api",
		"plugins": [{ "name": "rollup-plugin-typescript2" }, { "transform": "ts-transformer-keys/transformer" }]
	},
	"include": ["api/**/*", "rollup.config.js", "vite.config.ts", "*.cjs"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
